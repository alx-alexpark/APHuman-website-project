[ "x${DEBUG+set}" = 'xset' ] && set -v
set -e

if [ ! -d "www" ]; then
	printf "untitled error: no www/ directory. Exiting\n"
	exit 1
fi

cleansite() {
	SITENAME="${1}"

	if [ ! -d "www/${SITENAME}/site" ]; then
		printf "Site '%s' has no site directory; skipping clean\n" "${SITENAME}"
		return 0
	fi

	printf "Cleaning .html files from site: '%s'\n" "${SITENAME}"

	for f in $(find -L www/"${SITENAME}"/site/ -type f -name '*.html'); do
		if [ ! -f "${f}" ]; then continue; fi
		if [ -f "${f%.html}.md" ]; then
			rm -f "${f}"
		fi
	done

	rm -f www/"${SITENAME}"/site/feed.xml
	for f in $(find -L www/"${SITENAME}"/site/ -type f -name 'MANIFEST'); do
		if [ ! -f "${f}" ]; then continue; fi
		rm -f "${f%MANIFEST}"{index.md,index.html,feed.xml} # index page is auto-generated
	done
}

if [ $# -gt 0 ]; then
	for site in "${@}"; do
		sitename="${site##*/}"
		cleansite "${sitename}"
	done
else
	for sitedir in www/*; do
		cleansite "${sitedir##*/}"
	done
fi
